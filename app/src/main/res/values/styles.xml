<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PortfolioText">
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:textColor">@color/textColorWite</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
